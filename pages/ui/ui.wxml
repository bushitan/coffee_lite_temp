<!--pages/test/test.wxml-->



<view class="{{config.theme}}" style="    position: relative;">

    
    <swiper class="screen-swiper round-dot" indicator-dots="true" circular="true" autoplay="true" interval="5000" duration="500">
        <swiper-item wx:for="{{swiperList}}" wx:key>
            <image src="{{item.url}}" mode="aspectFill" wx:if="{{item.type=='image'}}"></image>
            <video src="{{item.url}}" autoplay loop muted show-play-btn="{{false}}" controls="{{false}}" objectFit="cover" wx:if="{{item.type=='video'}}"></video>
        </swiper-item>
    </swiper>
    <view class="pg-radius-card bg-white " style=""></view>

    <view class="cu-list menu-avatar">
        <view class="cu-item">
            <image class="cu-avatar round lg" src="https://ossweb-img.qq.com/images/lol/web201310/skin/big10001.jpg"></image>
            <view class="content">
                <view class="text-grey">
                    <text class="cu-tag round " wx:if="{{userInfo}}">登陆</text>
                    <open-data class="" type="userNickName"></open-data>
                </view>
                <view class="text-gray text-sm flex">
                    <text class="text-cut  cu-tag round theme-bg">
                        <text class=" text-white  ">充值会员</text> 
                    </text>
                </view>
            </view>
            <view class="action">
                <view class="text-black text-bold text-xl">0</view>
                <view class="text-sm">集点</view>
            </view>
            <view class="action">
                <view class="text-black text-bold text-xl">0</view>
                <view class="text-sm">券包</view>
            </view>
            <view class="action">
                <view class="text-black text-bold text-xl">0</view>
                <view class="text-sm">充值</view>
            </view>
        </view>
    </view>

    <view class="padding-lr margin-top">
        <view class="padding-sm flex justify-between align-center margin-top  bg-white radius text-sm">
            <view class="title">
                <text class="cuIcon-commentfill theme-text margin-right-xs"></text>
                <text class="picker"> 禁止换行，超出容器部分会以 禁止换行 </text>
            </view>           
            <view class="cuIcon-right text-gray"></view>
        </view>
    </view>

    
    <view class="padding-lr margin-top">
        <view class=" flex justify-between align-center margin-top   radius text-sm">
            <view class="title">
                <text class="cuIcon-shopfill theme-text margin-right-xs"></text>
                <text class="text-gray">鲤湾店【距离200m】</text>
            </view>           
            <view class="text-gray">
                更多门店 <text class="cuIcon-right"></text>
            </view>
        </view>
    </view>

    
    <view class=" padding-lr margin-top-xs">
        <view class="grid col-2  text-center"  >
            <view class="padding-right" >            
                <view class="bg-yellow pg-radius" style="height:380rpx;" >
                     <image class="block" src="https://ossweb-img.qq.com/images/lol/web201310/skin/big10001.jpg" mode="widthFix"></image>
                </view>               
            </view>
            <view class="" >
                <view class="bg-cyan pg-radius" style="height:175rpx;" >1</view>
                <view class="bg-cyan pg-radius  margin-top"  style="height:175rpx;"  >1</view>
            </view>
        </view>
    </view>

    
    <view class="padding-lr margin-top pg-radius">
        <image class="block pg-radius" src="https://ossweb-img.qq.com/images/lol/web201310/skin/big84000.jpg" mode="widthFix"></image>
    </view>


    <!-- 地址 -->
    <view class="cu-list bg-white padding">
        <view class="cu-item">
            <view class="content">
                <view class="text-grey">
                    <text class="text-bold">请选择门店</text>
                    <text class="cuIcon-right "></text>
                </view>
                <view class="text-gray text-sm flex">
                <text class="text-cut">
                        <text class="cuIcon-locationfill theme-text  margin-right-xs"></text> Seeking鲤湾店
                </text>
                </view>
            </view>
        </view>
    </view>
    <view class="cu-list menu  cu-card ">
        <view class="cu-item " wx:for="{{[1,2,3]}}">
            <view class="content padding-tb-sm">
                <view class="">
                    <text class="text-bold margin-right-xs">Seeking鲤湾店</text>
                    <text class="text-bold cu-tag sm  text-red" style="background-color: rgba(204, 69, 59, 0.2)">距离最近</text>
                </view>
                <view class="text-gray text-sm flex">
                    <text class="text-cut">
                        <text class=" text-gray  margin-right-xs">南宁市青秀区鲤湾路56号</text> 
                    </text>
                </view>
                <view class=" text-sm">
                    <text class="text-gray margin-right">休息中</text>
                    <text class="text-gray" >07:30-21:45</text>
                </view>
            </view>
            <view class=" text-xxl">                    
                <view class=" text-right">                        
                    <text class="cuIcon-phone theme-text margin-right" ></text>
                    <text class="cuIcon-location theme-text" ></text>
                </view>    
                <view class=" padding-top">
                    <button class="cu-btn round theme-bg text-white shadow-blur">选择点单</button>
                </view>
            </view>
        </view>
    </view>


        
    

    <view class="pg-space-xxl"></view>
</view> 



